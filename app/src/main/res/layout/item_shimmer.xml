<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewList"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/btn_r_small"
        app:elevation="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:elevation="4dp">

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/content_margin"
                android:layout_weight="1"
                android:padding="3dp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/TvTitleCat"
                    android:background="@color/grey_200"
                    android:layout_width="wrap_content"
                    android:text="LoremIpsum sis amdedjasj"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey_200"
                    android:textSize="@dimen/ts_large" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/TvTipe"
                    android:layout_marginTop="5dp"
                    android:background="@color/grey_200"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sdasjdhjahsd"
                    android:textColor="@color/grey_200"
                    android:textSize="@dimen/ts_small" />

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>