<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardviewList"
    android:layout_width="match_parent"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="4dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/btn_r_small"
    app:elevation="4dp">

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/content_margin"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/TvTitleCat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hosico"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/ts_xxlarge" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/TvTipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@color/grey_500"
                android:textSize="@dimen/ts_small" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:paddingStart="@dimen/content_margin"
            android:paddingTop="@dimen/padding_large"
            android:paddingEnd="@dimen/content_margin"
            android:paddingBottom="@dimen/padding_large"
            android:scaleType="centerCrop"
            android:tint="@color/greyish"
            app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp"
            tools:ignore="VectorDrawableCompat" />

    </LinearLayout>

</androidx.cardview.widget.CardView>